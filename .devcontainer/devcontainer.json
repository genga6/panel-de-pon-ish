{
	"name": "my-llm-chat-ui",
	"dockerComposeFile": "docker-compose.yaml",
  "service": "my-llm-chat-ui",
	"workspaceFolder": "/workspaces/my-llm-chat-ui",
	"overrideCommand": true,
	"customizations": {
		"vscode": {
			"extensions": [
                "dbaeumer.vscode-eslint",        // ESLint
                "esbenp.prettier-vscode",        // Prettier
                "dsznajder.es7-react-js-snippets", // Reactスニペット
                "formulahendry.auto-close-tag",  // タグ補完
                "formulahendry.auto-rename-tag", // タグ名連動リネーム
                "oderwat.indent-rainbow",        // インデント表示
                "ms-ceintl.vscode-language-pack-ja" // 日本語化
			]
		}
	}, 
    "forwardPorts": [5173],
    "portsAttributes": {
      "5173": {
        "label": "Vite Dev Server",
        "onAutoForward": "openBrowser"
      }
    },
    "postCreateCommand": "[ -d frontend ] || npm create vite@latest frontend -- --template react-ts && cd frontend && npm install"
}
